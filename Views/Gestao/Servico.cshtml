@model IEnumerable<projetos.Models.Servico>


@{

    Layout = "_LayoutAdmin";}
<h2>Serviços</h2>
<hr />
<a asp-action="NovoServico" asp-controller="Gestao" class="btn btn-success">Novo Servico</a>
<hr />



<table id="servicos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Preço</th>
       
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servico in Model)
        {
        <tr>
            <td>@servico.ID</td>
            <td>@servico.Nome</td>
            <td>@servico.Preco</td>




            <td>
                <a class="btn btn-primary" href="/Gestao/EditarCliente/@servico.ID">Editar</a>
                <form style="display: inline;" asp-controller="Cliente" asp-action="Deletar">
                    <input type="hidden" name="id" id="id" value="@servico.ID">
                    <button class="btn btn-danger">Deletar</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>