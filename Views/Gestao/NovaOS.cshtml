@model projetos.Models.OS


@{ Layout = "_LayoutAdmin";}

<h2>Novo Servico</h2>



<form class="form-horizontal" asp-controller="OS" asp-action="Salvar" method="POST">



    <input type="hidden" asp-for="ID" value="0">

    <label asp-for="cliente.ID">Nome</label>
    <select class="form-control" asp-for="idcliente" asp-items='@(new SelectList(@ViewBag.clientes, "ID", "Nome"))'></select>


    <label asp-for="Observacoes">Nome</label>
    <input asp-for="Observacoes" type="text" class="form-control" />
    <button class="btn btn-success">Cadastrar</button>
</form>