@model IEnumerable<projetos.Models.Cliente>


@{

    Layout = "_LayoutAdmin";}
<h2>Clientes</h2>
<hr />
<a asp-action="NovoCliente" asp-controller="Gestao" class="btn btn-success">Novo Cliente</a>
<hr />



<table id="clientes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>CPF</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Cidade</th>
            <th>Bairro</th>
            <th>Observações</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.ID</td>
                <td>@cliente.CPF</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Cidade</td>
                <td>@cliente.Bairro</td>
                <td>@cliente.Observacoes</td>

                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCliente/@cliente.ID">Editar</a>
                    <form style="display: inline;" asp-controller="Cliente" asp-action="Deletar">
                        <input type="hidden" name="id" id="id" value="@cliente.ID">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>